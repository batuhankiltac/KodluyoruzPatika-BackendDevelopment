public class Main {

    static boolean isPalindrom(int number) {
        int temp = number;
        int reverseNumber = 0;
        int lastNumber;

        while (temp != 0) {
            lastNumber = temp % 10;
            reverseNumber = (reverseNumber * 10) + lastNumber;
            temp /= 10;
        }
        return number == reverseNumber;
    }

    public static void main(String[] args) {
        System.out.println("Palindrom sayÄ± mÄ±? : " + isPalindrom(505));
    }
}
