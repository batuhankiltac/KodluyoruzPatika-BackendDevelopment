import java.util.*;

public class Main {
    public static void main(String[] args) {
        int sicaklik;

        Scanner input = new Scanner(System.in);

        System.out.print("Hava kaç derece? : ");
        sicaklik = input.nextInt();

        if (sicaklik <= 5) {
            System.out.println("Hava " + sicaklik + " derece kayak yapabilirsin.");
        }
        else if (sicaklik > 5 && sicaklik <= 15) {
            System.out.println("Hava " + sicaklik + " derece sinemaya gidebilirsin.");
        }
        else if (sicaklik > 15 && sicaklik <= 25) {
            System.out.println("Hava " + sicaklik + " derece pikniğe gidebilirsin.");
        }
        else {
            System.out.println("Hava " + sicaklik + " derece yüzmeye gidebilirsin.");
        }
    }
}
