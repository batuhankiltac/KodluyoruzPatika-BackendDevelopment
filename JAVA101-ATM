import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        String userName;
        String password;

        Scanner input = new Scanner(System.in);

        int right = 3;
        int balance = 1500;
        int select;

        while (right > 0) {
            System.out.print("Kullanıcı Adınız: ");
            userName = input.nextLine();
            System.out.print("Parolanız: ");
            password = input.nextLine();

            if (userName.equals("patika") && password.equals("dev123")) {
                System.out.print("\n** KODLUYORUZ BANKASINA HOŞGELDİNİZ **\n");

                do {
                    System.out.print("1-Hesaba Para Yatırma\n2-Hesaptan Para Çekme\n3-Hesap Bakiyesi Sorgulama\n4-Çıkış\n");
                    System.out.print("Lütfen yapmak istediğiniz işlemi seçiniz: ");
                    select = input.nextInt();

                    switch (select) {
                        case 1:
                            System.out.print("Yatırmak istediğiniz tutarı tuşlayınız: ");
                            int price = input.nextInt();
                            System.out.println("İşleminiz başarıyla gerçekleşmiştir. Güncel bakiyeniz (TL): " + (balance += price) + "\n");
                            break;

                        case 2:
                            System.out.print("Çekmek istediğiniz tutarı tuşlayınız: ");
                            price = input.nextInt();
                            if (price > balance) {
                                System.out.println("Bu işlem için bakiyeniz yetersizdir.\n");
                                break;
                            }
                            else {
                                balance -= price;
                                break;
                            }

                        case 3:
                            System.out.println("Hesap bakiyeniz (TL): " + balance + "\n");
                            break;

                        default:
                            break;
                    }
                }

                while (select != 4);
                System.out.println("Hoşçakalın " + userName + " iyi günler dileriz.");
                break;
            }

            else {
                right--;
                System.out.println("Hatalı kullanıcı adı veya şifre girdiniz. Lütfen tekrar deneyiniz.");
                if (right == 0) {
                    System.out.println("Hesabınız bloke olmuştur lütfen banka ile iletişime geçiniz.");
                }
                else {
                    System.out.println("Giriş yapabilmek için kalan deneme hakkınız: " + right);
                }
            }
        }
    }
}
