import java.util.*;

public class Main {
    public static void main(String[] args) {
        int i = 0;
        int sum = 0;

        Scanner input = new Scanner(System.in);

        do {
            System.out.print("Bir sayÄ± giriniz: ");
            i = input.nextInt();

            if (i % 2 == 0 && i % 4 == 0) {
                sum += i;
            }
        }
        while (i % 2 != 1);

        System.out.println(sum);
    }
}
