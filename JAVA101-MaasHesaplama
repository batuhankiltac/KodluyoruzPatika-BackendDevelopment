public class Main {


    public static class Employee {
        String name;
        double salary;
        int workHours;
        int hireYear;

        Employee(String name, double salary, int workHours, int hireYear) {
            this.name = name;
            this.salary = salary;
            this.workHours = workHours;
            this.hireYear = hireYear;
        }

        public double tax() {
            double tax;
            if (this.salary < 1000) {
                tax = 0;
            }
            else{
                tax = this.salary * 0.03;
            }
            return tax;
        }

        public double bonus(){
            return this.workHours * 4;
        }

        public double raiseSalary() {
            int timeDiff = 2021 - this.hireYear;
            double raise = 0;
            if (timeDiff < 10) {
                raise = this.salary * 0.05;
            }
            else if (timeDiff > 9 && timeDiff < 20) {
                raise = this.salary * 0.10;
            }
            else if (timeDiff > 19) {
                raise = this.salary * 0.15;
            }
            return raise;
        }

        @Override
        public String toString() {
            return "Adı: " + this.name + "\nMaaşı(TL): " + this.salary + "\nHaftalık çalışma saati: " + this.workHours +
                    "\nBaşlangıç Yılı: " + this.hireYear + "\nVergi(TL): " + this.tax() + "\nBonus(TL): " + this.bonus() +
                    "\nMaaş Artışı(TL): " + this.raiseSalary() + "\nVergi ve Bonuslar ile maaş(TL): " +
                    (this.salary - this.tax() + this.bonus() + "\nToplam Maaş(TL): " + (this.salary +  this.raiseSalary()));
        }
    }

    
    public static void main(String[] args) {
        Employee employee = new Employee("PATİKA",2000,50,2000);

        System.out.println(employee.toString());
    }
}
