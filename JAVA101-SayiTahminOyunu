import java.util.*;

public class Main {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        Random rand = new Random();
        int machNumber = rand.nextInt(100);

        int right = 0;
        int userNumber;
        int[] wrong = new int[5];
        boolean isWin = false;
        boolean isWrong = false;


        while (right < 5) {
            System.out.print("Bir sayı tahmin edin: ");
            userNumber = input.nextInt();

            if (userNumber < 0 || userNumber > 99) {
                System.out.println("HATA: 0-100 arasında bir sayı girin.");

                if (isWrong) {
                    right++;
                    System.out.println("Çok fazla hatalı giriş yaptın. Kalan hak: " + (5 - right));
                }
                else {
                    isWrong = true;
                    System.out.println("Bir dahaki hatalı girişinde hakkından düşülecektir.");
                }
                continue;
            }

            if (userNumber == machNumber) {
                System.out.println("Tebrikler, " + (5 - right) + " hakkın kala bildin.");
                isWin = true;
                break;
            }
            else {
                if (userNumber > machNumber) {
                    System.out.println("Daha küçük bir sayı girin.");
                }
                else {
                    System.out.println("Daha büyük bir sayı girin.");
                }
                wrong[right++] = userNumber;
                System.out.println("Kalan hakkın: " + (5 - right));
            }
        }

        if (!isWin) {
            System.out.println("\nÜzgünüm, kaybettin. Doğru sayı " + machNumber + " olmalıydı.");

            if (!isWrong) {
                System.out.println("Tahmin ettiğin sayılar: " + Arrays.toString(wrong));
            }
        }
    }
}
