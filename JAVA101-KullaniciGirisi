import java.util.*;

public class Main {
    public static void main(String[] args) {
        String id;
        String  pass;
        String passReset;
        String newPass;

        Scanner input = new Scanner(System.in);

        System.out.print("Kullanıcı adınız: ");
        id = input.nextLine();

        System.out.print("Şifreniz: ");
        pass = input.nextLine();

        if (id.equals("patika") && (pass.equals("java1234"))) {
            System.out.println("Giriş başarılı.");
        }
        else if (!id.equals("patika") && (pass.equals("java1234"))) {
            System.out.println("Kullanıcı adı hatalı.");
        }
        else if (id.equals("patika") && (!pass.equals("java1234"))) {
            System.out.println("Şifre hatalı.");
        }
        else {
            System.out.println("Giriş başarısız.");
        }
        System.out.print("Şifrenizi sıfırlamak istermisiniz.\nEvet - Hayır : ");
        passReset = input.nextLine();

        switch (passReset) {
            case "Evet":
                System.out.print("Yeni Şifre giriniz: ");
                newPass = input.nextLine();
                if (!newPass.equals("java1234"))
                    System.out.println("Tebrikler yeni şifre oluşturuldu.");
                else System.out.println("Yeni şifre, eski şifre ile aynı olamaz. Tekrar deneyin.");
                break;
            case "Hayır":
                System.out.println("Şifre oluşturulamadı. Oturum sonlandırılıyor ...");
                break;
        }
    }
}
