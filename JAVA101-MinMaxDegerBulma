import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        int min = 0;
        int max = 0;
        Scanner sc = new Scanner(System.in);
        System.out.print("Kaç adet sayı ile işlem yapmak istersiniz?: ");
        int n = sc.nextInt();

        for (int i = 1; i <= n; i++) {
            System.out.print(i + ". sayıyı giriniz: ");
            int sayi = sc.nextInt();

            if (i == 1) {
                min = sayi;
                max = sayi;
            }
            else if (sayi < min) {
                min = sayi;
            }
            else {
                max = sayi;
            }
        }
        System.out.println("\nEn küçük sayı: " + min);
        System.out.println("En büyük sayı: " + max);
    }
}
