import java.util.*;

public class Main {
    public static void main(String[] args) {
        double acilisUcreti = 10;
        double kmBasiTutar = 2.20;
        double minTutar = 20;
        double toplamUcret;
        double gidilenMesafe;

        Scanner input = new Scanner(System.in);

        System.out.print("Mesafe girin (KM): ");
        gidilenMesafe = input.nextDouble();

        toplamUcret = (gidilenMesafe * kmBasiTutar) + acilisUcreti;
        System.out.print("Mesafeye (KM) göre toplam ücret: " + toplamUcret);

        String altTutar = (toplamUcret <= minTutar) ? ("\nMinimum mesafe ücreti: " + minTutar) : ("\nÖdenecek ücret: " + toplamUcret);
        System.out.println(altTutar);
    }
}
